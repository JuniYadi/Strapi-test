{
  "routes": [
    {
      "method": "GET",
      "path": "/courses",
      "handler": "Courses.find",
      "config": {
        "policies": [
          "global.isMe"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/courses/count",
      "handler": "Courses.count",
      "config": {
        "policies": [
          "global.isMe"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/courses/:id",
      "handler": "Courses.findOne",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/courses",
      "handler": "Courses.create",
      "config": {
        "policies": [
          "global.setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/courses/:id",
      "handler": "Courses.update",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/courses/:id",
      "handler": "Courses.delete",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    }
  ]
}