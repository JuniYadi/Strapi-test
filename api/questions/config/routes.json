{
  "routes": [
    {
      "method": "GET",
      "path": "/questions",
      "handler": "Questions.find",
      "config": {
        "policies": [
          "global.isMe"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/questions/count",
      "handler": "Questions.count",
      "config": {
        "policies": [
          "global.isMe"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/questions/:id",
      "handler": "Questions.findOne",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/questions",
      "handler": "Questions.create",
      "config": {
        "policies": [
          "global.setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/questions/:id",
      "handler": "Questions.update",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/questions/:id",
      "handler": "Questions.delete",
      "config": {
        "policies": [
          "checkOwner"
        ]
      }
    }
  ]
}
